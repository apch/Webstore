{% extends '@Admin/admin.html.twig' %}

{% block page_content -%}
    <h3>{{ 'User' }}</h3>

    <table class="record_properties table table-bordered table-striped">
        <tbody>
        <tr>
            <th>{{ 'Name' }}</th>
            <td>{{ user.fullName }}</td>
        </tr>
        <tr>
            <th>{{ 'Email' }}</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>{{ 'Phone number' }}</th>
            <td>{{ user.phone }}</td>
        </tr>
        <tr>
            <th>{{ 'Address' }}</th>
            <td>{{ user.address }}</td>
        </tr>
        <tr>
            <th>{{ 'Join date' }}</th>
            <td>{{ user.joinDate|date('Y-m-d h:i') }}</td>
        </tr>
        <tr>
            <th>{{ 'Orders' }}</th>
            <td>
                {% if user.orders|length %}
                    <a href="{{ path('admin_user_orders', {'id': user.id}) }}">
                        {{ 'Orders' }} ({{ user.orders|length }})
                    </a>
                {% else %}
                    -
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <ul class="list-group">
        <li class="list-group-item">
            <a href="{{ path('admin_user_list') }}">
                {{ 'Back to the list' }}
            </a>
        </li>
    </ul>
{% endblock page_content %}

