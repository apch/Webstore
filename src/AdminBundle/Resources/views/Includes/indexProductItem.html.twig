<tr data-id="{{ product.id }}">
    <td><a href="{{ path('admin_edit_product_form', { 'id': product.id }) }}">{{ product.name }}</a></td>
    <td>
        {% for category in product.categories %}
        {{ category.name }}<br>
        {% endfor %}
    </td>
    <td>{{ product.price }}</td>
    <td><img src="{{ asset('uploads/products/' ~ product.imageUrl) }}" class="img-responsive"></td>
    <td>{{ product.quantity }}</td>
    <td>
        <a href="{{ path('admin_edit_product_form', { 'id': product.id }) }}">{{ 'show' }}</a><br>
        <a href="{{ path('admin_edit_product_form', { 'id': product.id }) }}">{{ 'edit' }}</a><br>
        {% if product.featured|length %}
            <a href="#" class="featured">{{ FEATURED }}</a>
        {% else %}
            <a href="#" class="featured">{{ NOT_FEATURED }}</a>
        {% endif %}

    </td>
</tr>
